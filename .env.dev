# Development Environment Variables
# Copy this file to .env.dev and update values

NODE_ENV=development
PORT=5002

# Database Configuration
DATABASE_URL=sqlite:./test.db

# Session Configuration
SESSION_SECRET=this_is_a_test_session_secret_for_development_only_min_64_chars

