# Development Environment Variables
# Copy this file to .env.dev and update values

NODE_ENV=development
PORT=5002

# Database Configuration
DATABASE_URL=postgresql://dtvisuals:CHANGE_PASSWORD@localhost:5432/dtvisuals_dev

# Session Configuration
SESSION_SECRET=CHANGE_TO_SECURE_RANDOM_STRING_MIN_64_CHARS

# Application Configuration
DOMAIN=dev.dtvisuals.com
APP_NAME=DT-Visuals-Development

# File Upload Configuration
UPLOADS_DIR=/var/www/dtvisuals/uploads/dev
MAX_FILE_SIZE=2621440000

# Security Configuration
TRUSTED_PROXIES=127.0.0.1,::1

